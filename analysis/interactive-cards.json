  "troubleshooting_cards": [
    {
      "id": "issue.no-internet",
      "symptom": "Cannot connect to internet",
      "causes": ["Ethernet unplugged", "Wi-Fi disabled", "Wrong password", "USB dongle not detected"],
      "steps": [
        "Control Panel -> Network",
        "Ethernet: confirm 100 connected",
        "Wi-Fi: ensure ON, remove old profiles, add New Connection",
        "Verify Online status green"
      ],
      "verify": ["Online status green"],
      "escalate": "If still offline after Ethernet test",
      "links": ["https://knowledge.evolt360.com/knowledge/how-to-connect-to-the-network"]
    },
    {
      "id": "issue.no-new-connection",
      "symptom": "No New Connection option",
      "causes": ["USB lock on", "Wi-Fi dongle not detected"],
      "steps": [
        "System -> Lock USB OFF",
        "Refresh and power cycle",
        "Test dongle on another device",
        "Update via Ethernet"
      ],
      "verify": ["New Connection visible"],
      "escalate": "If dongle works elsewhere and button still missing",
      "links": ["https://knowledge.evolt360.com/knowledge/no-option-to-add-new-connection"]
    },
    {
      "id": "issue.white-screen",
      "symptom": "Scanner stuck on white screen",
      "causes": ["Interrupted update", "Unstable internet"],
      "steps": [
        "Restart kiosk",
        "Reconnect internet",
        "Run software update",
        "Wait 10 minutes for recovery"
      ],
      "verify": ["Control Panel returns"],
      "escalate": "If still white after 10 minutes",
      "links": ["https://knowledge.evolt360.com/knowledge/scanner-is-stuck-on-a-white-screen"]
    },
    {
      "id": "issue.control-panel-stuck",
      "symptom": "Stuck on Control Panel",
      "causes": ["Not logged into Operator Panel"],
      "steps": [
        "Ensure Online status green",
        "Open Operator Panel and login",
        "Set Kiosk mode Unattended and Save"
      ],
      "verify": ["Start Scanning button appears"],
      "escalate": "If Operator login missing",
      "links": ["https://knowledge.evolt360.com/knowledge/scanner-is-stuck-on-the-control-panel-screen"]
    },
    {
      "id": "issue.no-start-button",
      "symptom": "No Start Scanning button",
      "causes": ["Operator session expired", "Scale API not ready"],
      "steps": [
        "Power cycle",
        "Check Scale API and Scale Status Ready",
        "Login to Operator Panel"
      ],
      "verify": ["Start Scanning visible"],
      "escalate": "If issue persists",
      "links": ["https://knowledge.evolt360.com/knowledge/no-start-scanning-button"]
    },
    {
      "id": "issue.log-in-not-responding",
      "symptom": "Tap Log In/Sign Up does nothing",
      "causes": ["Passcode enabled"],
      "steps": [
        "Check faint grey circle",
        "Enter operator passcode to enable scan",
        "Re-enter Operator Panel login"
      ],
      "verify": ["Login responds"],
      "escalate": "If still unresponsive",
      "links": ["https://knowledge.evolt360.com/knowledge/nothing-happens-when-they-try-to-select-log-in/-sign-up-for-scan"]
    },
    {
      "id": "issue.print-missing",
      "symptom": "No print button or preview",
      "causes": ["Outdated software", "Printer not set as default"],
      "steps": [
        "Run software update",
        "Check Operator Panel print setting",
        "Verify default printer and re-pair"
      ],
      "verify": ["Print button appears"],
      "escalate": "If issue persists",
      "links": ["https://knowledge.evolt360.com/knowledge/no-print-button-and-preview-after-scan"]
    },
    {
      "id": "issue.print-misaligned",
      "symptom": "Results not aligned on print sheets",
      "causes": ["Wrong printer model", "Wireless reconnect issues"],
      "steps": [
        "Prefer wired USB connection",
        "Delete and re-add printer",
        "Adjust printer print position if needed"
      ],
      "verify": ["Print aligned"],
      "escalate": "If still misaligned",
      "links": ["https://knowledge.evolt360.com/knowledge/results-are-not-aligned-on-the-sheets-when-printed"]
    },
    {
      "id": "issue.printer-jam",
      "symptom": "Printer jams after scans",
      "causes": ["Paper not fanned", "Paper type setting"],
      "steps": [
        "Clear jam",
        "Fan paper before loading",
        "Set paper type to Thick",
        "Contact Brother support if persistent"
      ],
      "verify": ["Prints without jam"],
      "escalate": "If jams continue",
      "links": ["https://knowledge.evolt360.com/knowledge/printer-jamming"]
    },
    {
      "id": "issue.power",
      "symptom": "Scanner not turning on",
      "causes": ["Power switch off", "Loose power cable", "Outlet issue"],
      "steps": [
        "Check rear switch",
        "Reseat power cable with flat side up",
        "Try different outlet"
      ],
      "verify": ["Unit powers on"],
      "escalate": "If lights or sound but no boot",
      "links": ["https://knowledge.evolt360.com/knowledge/scanner-is-not-turning-on"]
    },
    {
      "id": "issue.calibration",
      "symptom": "Weight or results inaccurate",
      "causes": ["Scale settings incorrect", "Electrical interference"],
      "steps": [
        "Control Panel -> Scale",
        "Set Measurement Mode Precision and Weight of Clothes 0.5kg",
        "Calibrate and Save",
        "Use Normal mode if interference"
      ],
      "verify": ["Accurate weight"],
      "escalate": "If Scale API disconnected",
      "links": ["https://knowledge.evolt360.com/knowledge/calibrating-scanner"]
    }
  ]
}
