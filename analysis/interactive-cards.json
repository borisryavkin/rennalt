      "actions": [
        "Scan serial using the app or enter manually",
        "Resolve model based on serial mapping",
        "Show model badge and required setup path"
      ],
      "verify": ["Model badge matches kiosk label"],
      "links": [],
      "offline_priority": "high"
    },
    {
      "id": "setup.unbox-assemble",
      "title": "Unbox and assemble",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Box on site"],
      "actions": [
        "Unbox kiosk and confirm included items",
        "Assemble kiosk per video guide",
        "Position kiosk near power and internet"
      ],
      "verify": ["Kiosk stable and powered"],
      "links": [
        "https://knowledge.evolt360.com/knowledge/setting-up-your-evolt-360-scanner",
