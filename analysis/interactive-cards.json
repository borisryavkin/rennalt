    {
      "id": "setup.power-control-panel",
      "title": "Boot to Control Panel",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Kiosk assembled"],
      "actions": [
        "Power on using rear switch",
        "If login screen appears, tap Evolt logo to open Control Panel"
      ],
      "verify": ["Control Panel visible"],
      "links": [],
      "offline_priority": "high"
    },
    {
      "id": "setup.connect-internet",
      "title": "Connect to internet",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Control Panel"],
      "actions": [
        "Ethernet preferred: plug in cable and press Refresh",
        "Wi-Fi: insert dongle in USB port 1, Network -> Wi-Fi On -> New Connection",
        "Enter password and reconnect"
      ],
      "verify": ["Online status green and Network API connected"],
      "links": [
        "https://knowledge.evolt360.com/knowledge/how-to-connect-to-the-network",
        "https://knowledge.evolt360.com/knowledge/no-option-to-add-new-connection"
      ],
      "offline_priority": "high"
    },
    {
      "id": "setup.software-update",
      "title": "Run software update",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Online status green"],
      "actions": [
        "Control Panel -> Software Update",
        "Wait for update and reboot"
      ],
      "verify": ["Scanner returns to scan screen"],
      "links": ["https://knowledge.evolt360.com/knowledge/software-update"],
      "offline_priority": "medium"
    },
    {
      "id": "setup.operator-panel",
      "title": "Operator Panel login and configuration",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Operator credentials"],
      "actions": [
        "Open Operator Panel",
        "Enter login from sticker on back",
        "Set Location, Kiosk Mode (Unattended), Printer Mode, Volume",
        "Save"
      ],
      "verify": ["Start Scanning button appears"],
      "links": [
        "https://knowledge.evolt360.com/knowledge/scanner-is-stuck-on-the-control-panel-screen",
        "https://knowledge.evolt360.com/knowledge/what-is-my-operator-panel-log-ins"
      ],
      "offline_priority": "high"
    },
    {
      "id": "setup.printer",
      "title": "Printer setup",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Operator Panel configured"],
      "actions": [
        "Prefer wired USB connection",
        "Control Panel -> Printer -> Add Printer",
        "Select correct model driver and set Server Default"
      ],
      "verify": ["Default Printer shows Brother HL-L or HP M203"],
      "links": [
        "https://knowledge.evolt360.com/knowledge/connect-the-printer-to-the-evolt-360-body-scanner",
        "https://knowledge.evolt360.com/knowledge/compatible-printer-s",
        "https://knowledge.evolt360.com/knowledge/connecting-the-scanner-to-the-brother-printer-via-wi-fi",
        "https://knowledge.evolt360.com/knowledge/how-to-connect-evolt-360-scanner-to-hp"
      ],
      "offline_priority": "medium"
    },
    {
      "id": "setup.calibration",
      "title": "Scale check and calibration",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Online status green"],
      "actions": [
        "Control Panel -> Scale",
        "Set Measurement Mode Precision and Weight of Clothes 0.5kg",
        "Calibrate -> Save",
        "Test Weight Only"
      ],
      "verify": ["Weight reads accurately"],
      "links": ["https://knowledge.evolt360.com/knowledge/calibrating-scanner"],
      "offline_priority": "low"
    },
    {
      "id": "setup.first-scan",
      "title": "First scan and print test",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Printer configured", "Operator Panel configured"],
      "actions": [
        "Start Scanning",
        "Run test scan",
        "Confirm print preview and print output"
      ],
      "verify": ["Scan completes and prints"],
      "links": [
        "https://knowledge.evolt360.com/knowledge/no-print-button-and-preview-after-scan"
      ],
      "offline_priority": "medium"
    },
    {
      "id": "setup.housekeeping",
      "title": "Housekeeping and shutdown",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": [],
      "actions": [
        "Power off at end of day",
        "Clean screen with microfiber cloth",
        "Clean handles and foot electrodes with low-moisture wipe",
        "Run monthly software update"
      ],
      "verify": ["Unit clean and powered down"],
      "links": ["https://knowledge.evolt360.com/knowledge/evolt-360-scanner-housekeeping"],
      "offline_priority": "low"
    },
    {
      "id": "setup.passcode",
      "title": "Enable passcode (optional)",
      "models": ["SOM", "LP1", "LP3"],
      "prerequisites": ["Support activation"],
      "actions": [
        "Request activation from support",
        "Control Panel -> Refresh",
        "Use grey circle to enter passcode per scan"
      ],
      "verify": ["Grey circle turns green after passcode"],
      "links": ["https://knowledge.evolt360.com/knowledge/i-want-to-enable-a-passcode-system-on-my-evolt-360-scanner"],
