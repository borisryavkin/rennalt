# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

ENV['RCT_NEW_ARCH_ENABLED'] = '0'

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Knolevolabase' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :new_arch_enabled => false,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |build_config|
        build_config.build_settings['CLANG_DISABLE_DEPENDENCY_SCANNING'] = 'YES'

        cflags = build_config.build_settings['OTHER_CFLAGS']
        if cflags.is_a?(Array)
          build_config.build_settings['OTHER_CFLAGS'] =
            cflags.reject { |flag| flag.include?('RCTSwiftUI.modulemap') }
        elsif cflags.is_a?(String)
          build_config.build_settings['OTHER_CFLAGS'] =
            cflags.split(' ').reject { |flag| flag.include?('RCTSwiftUI.modulemap') }.join(' ')
        end

        swift_paths = build_config.build_settings['SWIFT_INCLUDE_PATHS']
        if swift_paths.is_a?(Array)
          build_config.build_settings['SWIFT_INCLUDE_PATHS'] =
            swift_paths.reject { |path| path.include?('RCTSwiftUI') }
        elsif swift_paths.is_a?(String)
          build_config.build_settings['SWIFT_INCLUDE_PATHS'] =
            swift_paths.split(' ').reject { |path| path.include?('RCTSwiftUI') }.join(' ')
        end

        swift_flags = build_config.build_settings['OTHER_SWIFT_FLAGS']
        if swift_flags.is_a?(Array)
          build_config.build_settings['OTHER_SWIFT_FLAGS'] =
            swift_flags.reject { |flag| flag.include?('RCTSwiftUI.modulemap') }
        elsif swift_flags.is_a?(String)
          build_config.build_settings['OTHER_SWIFT_FLAGS'] =
            swift_flags.split(' ').reject { |flag| flag.include?('RCTSwiftUI.modulemap') }.join(' ')
        end
      end
    end
  end
end
